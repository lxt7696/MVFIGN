def accuracy(output, labels):
    """计算准确率"""
    preds = output.max(1)[1].type_as(labels)
    correct = preds.eq(labels).double()
    correct = correct.sum()
    return correct / len(labels), sklearn.metrics.f1_score(labels, preds, average='weighted')


def test(model):
